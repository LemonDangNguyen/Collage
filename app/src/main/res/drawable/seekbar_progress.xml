<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@android:color/darker_gray" /> <!-- Màu nền của tiến trình -->
            <size android:height="8dp" /> <!-- Độ cao của thanh trượt -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape>
            <solid android:color="@color/colorAccent" /> <!-- Màu của thanh tiến trình -->
            <size android:height="8dp" /> <!-- Độ cao của thanh trượt -->
        </shape>
    </item>
</layer-list>
