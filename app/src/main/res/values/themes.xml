<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CollageImage" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerFamily.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/white</item>
    </style>
    <style name="Theme.CollageImage" parent="Base.Theme.CollageImage" />


    <style name="CustomSeekbar">
        <item name="android:thumb">@drawable/seekbar_thumb</item> <!-- Thiết lập hình ảnh con trỏ -->
        <item name="android:progressDrawable">@drawable/seekbar_progress</item> <!-- Thiết lập tiến trình thanh trượt -->
        <item name="android:backgroundTint">@color/fill_color</item> <!-- Thiết lập màu nền -->
    </style>
</resources>