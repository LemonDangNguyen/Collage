<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CollageImage" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerFamily.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/white</item>
    </style>
    <style name="Theme.CollageImage" parent="Base.Theme.CollageImage" />


    <style name="CustomSeekbar">
        <item name="android:thumb">@drawable/seekbar_thumb</item> <!-- Thiết lập hình ảnh con trỏ -->
        <item name="android:progressDrawable">@drawable/seekbar_progress</item> <!-- Thiết lập tiến trình thanh trượt -->
        <item name="android:backgroundTint">@color/fill_color</item> <!-- Thiết lập màu nền -->
    </style>

    <!--Theme Dialog-->
    <style name="ThemeDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>